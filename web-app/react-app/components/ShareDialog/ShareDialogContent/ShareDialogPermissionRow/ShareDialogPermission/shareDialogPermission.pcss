
.permissionRow {
  padding: 15px;
  display: flex;

  > *:not(first-child) {
    margin-left: 5px;
  }

  .userLabel {
    flex: 1;
    display: flex;
    align-items: center;

    .meLabel {
      margin-right: 5px;
    }
  }

  .select {
    width: 100px;
  }

  .errorContainer {
    display: flex;
    justify-content: center;
    margin-left: -5px;
    font-size: 12px;
  }
}

